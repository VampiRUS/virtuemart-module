<?xml version="1.0" encoding="UTF-8" ?>
<extension version="2.5" type="plugin" method="upgrade" group="vmpayment">
    <name>Unitpay</name>
    <creationDate>July 2015</creationDate>
    <author>ООО Юнитмобайл</author>
    <authorUrl>http://Unitpay.ru</authorUrl>
    <copyright>unitpay.ru</copyright>
    <license></license>
    <version>0.0.1</version>
    <description><![CDATA[Unitpay - универсальная система приема платежей. ]]></description>

    <languages>
        <language tag="en-GB">en-GB.vmpayment_unitpay.ini</language>
        <language tag="ru-RU">ru-RU.vmpayment_unitpay.ini</language>
    </languages>

    <files>
        <filename plugin="unitpay">unitpay.php</filename>
        <filename>unitpay.png</filename>
    </files>

    <vmconfig>
        <fields name="params">
            <fieldset name="payment" addfieldpath="/administrator/components/com_virtuemart/fields">
                <field type="text" name="public_key" size="50" label="PUBLIC KEY" default="" description="VMPAYMENT_UNITPAY_PUBLIC_KEY_DESC" />
                <field type="text" name="secret_key" size="50" label="SECRET KEY" default="" description="VMPAYMENT_UNITPAY_SECRET_KEY_DESC" />
            </fieldset>
        </fields>
    </vmconfig>

</extension>
